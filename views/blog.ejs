<!DOCTYPE html>
<html lang="en">

<head>

    <title>Blog</title>
</head>
        <%-include('./partials/head.ejs') %>
    <body>
        <%-include('./partials/nav.ejs') %>
        <div class="container mt-4">
            <h1><%=blog.title%></h1>
            <img src="<%=blog.coverImage %>" width="700px">
            <p><%=blog.body %></p>
        </div>

        <div class="container mt-4">
            <% if (blog.createdBy) { %>
                <img src="<%= blog.createdBy.profileImageURL %>" width="100px">
                <%= blog.createdBy.fullName %>
                    <% } else { %>
                        <p><em>Author info not available</em></p>
                        <% } %>
              
        </div>

        <%-include('./partials/scripts.ejs') %>
    </body>
</html>